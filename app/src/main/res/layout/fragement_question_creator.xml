<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/question_edittext"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Question goes here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/correct_answer_edititext"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Correct Answer Goes Here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/first_wrong_answer_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Wrong Answer Goes Here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="222dp" />

    <EditText
        android:id="@+id/second_wrong_answer_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Second Wrong Answer Goes Here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="276dp" />

    <EditText
        android:id="@+id/third_wrong_answer_edit_text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Third Wrong Answer Goes Here"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="330dp" />

    <Button
        android:id="@+id/save_question_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Save Question"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="424dp" />
</android.support.constraint.ConstraintLayout>